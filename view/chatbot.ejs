<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Chatbot AI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      body {
        background-color: #f4f4f4;
      }

      .chat-container {
        max-width: 600px;
        margin: 50px auto;
        background: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      #chatBox div {
        margin: 10px 0;
      }

      .user-message {
        text-align: right;
        color: #0d6efd;
      }

      .bot-message {
        text-align: left;
        color: #198754;
      }
    </style>
  </head>
  <body>
    <div class="chat-container">
      <h3 class="text-center mb-4">ðŸ¤– Chatbot AI</h3>

      <div id="chatBox"></div>

      <form id="chatForm" class="mt-3">
        <div class="input-group">
          <input type="text" id="userInput" class="form-control" placeholder="Ketik pesan..." required />
          <button type="submit" class="btn btn-primary">Kirim</button>
        </div>
      </form>
    </div>

    <script>
      document.getElementById('chatForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const userInput = document.getElementById('userInput').value.trim();
        if (!userInput) return;

        const chatBox = document.getElementById('chatBox');
        chatBox.innerHTML += `<div class="user-message"><strong>Kamu:</strong> ${userInput}</div>`;

        try {
          const response = await fetch('/chatbot', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ message: userInput }),
          });

          const data = await response.json();
          chatBox.innerHTML += `<div class="bot-message"><strong>Bot:</strong> ${data.reply}</div>`;
          chatBox.scrollTop = chatBox.scrollHeight;
        } catch (error) {
          chatBox.innerHTML += `<div class="bot-message text-danger"><strong>Bot:</strong> Terjadi kesalahan pada server.</div>`;
        }

        document.getElementById('userInput').value = '';
      });
    </script>
  </body>
</html>
